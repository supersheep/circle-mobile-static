extend layout

block vars
    - nohead = true

mixin item(cls,index)
    - if(index < 10){ index = ("0" + index)}
    li(class="item " + cls)
        a(href="#")
            img.pic(src="/img/collection_0_"+ index +".jpg")
            .txt 
                .title 红宝石镶钻项链 
                .price ￥2320

block style
    link(rel="stylesheet",href="/css/collection.css")
    link(rel="stylesheet",href="/css/swiper.css")

block content
    ul.list
        +item("right",1)
        +item("left",2)
