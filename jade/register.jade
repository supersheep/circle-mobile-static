extend layout

block vars
    - nonav = true

block style
    link(rel="stylesheet",href="/css/login.css")
block content
    .content-inner.reg
        .panel
            .panel-inner
                .row
                    input#username(type='text',placeholder="用户名")
                    i.icon-user
                .row
                    input#email(type='text',placeholder="邮箱")
                    i.icon-email
                .row
                    input#password(type='password',placeholder="密码")
                    i.icon-lock
                .row
                    input#confirm(type='password',placeholder="确认密码")
                    i.icon-confirm
                .row
                    input#phone(type='text',placeholder="手机号码")
                    i.icon-phone
                .row
                    button.btn 立即注册

block script
    script.
        $(".row").on("click",function(){
            $(".row").removeClass("active");
            $(this).addClass("active");
        });
        $(".row input").on("blur",function(){
            $(".row").removeClass("active");
        });