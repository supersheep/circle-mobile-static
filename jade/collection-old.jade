extend layout

block vars
    - nohead = true

mixin item(cls,index,rgb)
    - color = rgb ? ("rgba(" + rgb.join(",") + ",0.3)") : "rgba(209,203,191,0.3)"
    - if(index < 10){ index = ("0" + index)}
    li(class="item " + cls)
        a(href="#")
            img.pic(src="/img/collection_0_"+ index +".jpg")
            .txt(style="background-color:#{color}")
                .txt-inner
                    .title 红宝石镶钻项链 
                    .price ￥2320
                    img.arr(src="/img/right-arr-circle.png")

block style
    link(rel="stylesheet",href="/css/collection-old.css")
    link(rel="stylesheet",href="/css/swiper.css")

block content
    +slides
        +slide-item("/img/mothers-day.jpg")
        +slide-item("/img/mothers-day.jpg")
        +slide-item("/img/mothers-day.jpg")
    ul.list
        +item("right",1)
        +item("left",2)
        +item("right",3)
        +item("left",4,[187,201,195])
        +item("left",5,[167,179,170])
        +item("right",6,[189,203,199])
        +item("left",7,[144,161,161])
        +item("right",8,[111,128,127])
        +item("left",9,[98,115,111])
        +item("left",10,[168,182,181])
        +item("right",11,[168,182,181])


block script
    script(src="/js/swiper.js")
    +slide-init