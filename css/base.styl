body
    color: cyan
    font-family: sans-serif
    background: url("/img/bg.png")

body,ul,li,h1,h2,h3,h4,p
    margin: 0
    padding: 0

li
    list-style-type: none

a
    color: cyan

.head
    text-align: center
    height: 90px
    .logo
        height: 90px

.content
    top: 90px
    bottom: 40px
    width: 100%
    background-size: contain
    position: absolute
    overflow: auto

.nohead .content
    top: 0

.nonav .content
    bottom: 10px
.nav
    background: url("/img/bg.png")
    position: fixed
    width: 100%
    padding: 10px 0
    bottom: 0
    z-index: 99
    li
        width: 25%
        text-align: center
        color: cyan
        font-size: 12px
        float: left

@-webkit-keyframes bling
    0%
        background: linear-gradient(left, #fff, cyan)

    100%
        background: linear-gradient(left, cyan, #fff)
