.content-body
    position: relative
    background: #232323
    height: 100%
    overflow-y: scroll
    overflow-x: hidden


.slash
    position: absolute
    padding: 70px 68px
    img
        width: 200px
        height: 200px

.blocks
    position: absolute
    width: 100%
    z-index: 9

.block
    clearfix()
    height: 145px
    padding: 20px 15px
    .pic
        border: 3px solid cyan
        width: 100px
        height: 100px
        border-radius: 50%
    .txt
        width: 160px
        font-size: 9px
        line-height: 1.3
        margin-top: 10px
        color: cyan

.odd
    .txt,.pic
        float: right
    .txt
        margin-right: 20px
        text-align: right

.even
    .txt,.pic
        float: left
    .txt
        margin-left: 20px
        text-align: left