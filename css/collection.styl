.list
    padding-bottom: 40px
.item
    position: relative
    border-bottom: 1px solid #fff
    .pic
        width: 100%
        display: block
    .txt
        color: #fff
        position: absolute
        width: 100px
        font-size: 14px
        height: 100%
        top: 0
        text-align: left
        .txt-inner
            position: absolute
            padding: 5px
            top: 75px
            font-size: 12px
        .title
            margin-bottom: 5px
        .arr
            width: 22px
            height: 22px
            position: absolute
            right: 0
            top: 24px
    &.left
        .txt
            left: 0
    &.right
        .txt
            right: 0
