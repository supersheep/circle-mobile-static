.content
    top: 0

.slide
    position: relative
    .swiper-container,.swiper-slide
        width: 100%
    .swiper-slide
        width: 100%
        height: 200px
        img
            height: 200px
            display: block

.pagination
    @extend $pagination
    background-color: rgba(0,0,0,0.2)

.list
    .item
        width: 50%
        box-sizing: border-box
        border-bottom: 1px solid #fff
        position: relative
        float: left
        a
            text-decoration: none
            color: #fff
        .pic
            width: 100%
            display: block
        .txt
            width: 100%
            line-height: 24px
            font-size: 13px
            text-align: center
            position: absolute
            bottom: 0
    .item:nth-child(odd)
        border-right: 1px solid #fff
    .item:nth-child(1),.item:nth-child(2)
        border-top: 0
