$btn
    color: cyan
    display: inline-block
    text-shadow: 0 0 10px cyan
    font-size: 20px
    margin-top: 20px
    box-shadow: 2px 4px 7px #000
    line-height: 44px
    text-align: center
    text-decoration: none
    height: 44px
    width: 120px
    background-size: 120px 44px
    border: none
    background-color: transparent
    .text
        margin: 0 15px
        -webkit-background-clip: text
        -webkit-text-fill-color: transparent
        -webkit-animation: bling 2s infinite

$pagination
    text-align: center
    position: absolute
    width: 100%
    bottom: 0
    z-index: 9
    span
        height: 5px
        width: 5px
        margin-left: 7px
        border-radius: 3px
        border: 1px solid #888
        background-color: #fff
        display: inline-block
    span:nth-child(1)
        margin-left: 0
    .swiper-active-switch
        background-color: cyan
        border-color: #fff
