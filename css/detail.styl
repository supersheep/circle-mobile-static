@import "mixins"
purchase_padding = 7px

.product
    clearfix()
    box-shadow: 4px 0px 10px #000
    z-index: 9
    position: relative
    overflow: hidden
    .slide
        position: relative
        width: 182px
        margin-right: purchase_padding
        box-shadow: 4px 0px 10px #000
        float: left
        .swiper-container,.swiper-slide
            width: 100%
            height: 220px
            img
                width: 100%
    .pagination
        @extend $pagination
        height: 25px

    .purchase
        font-size: 12px
        padding-right: purchase_padding
        .name
            margin: 16px 0 12px 0
            font-size: 14px
            text-align: center
        .count-label
            margin-top: 20px
            margin-bottom: 5px
        .count-control
            .btn,.input
                border: 1px solid cyan
                color: #fff
                margin-right: -1px
                line-height: 27px
                height: 27px
                box-sizing: border-box
            .btn
                background-image: url("/img/tiny-btn.png")
                float: left
                width: 27px
                height: 27px
                background-size: 27px
                text-align: center
                font-size: 20px
            .input
                background-color: #272a2b
                text-align: center
                float: left
                width: 68px
        .buy
            @extend $btn
            background-image: url("/img/purchase-btn.png")
            .text
                background-image: linear-gradient(left, cyan, #fff)
                background-position: 0 0

.detail
    img
        display: block
        width: 100%

