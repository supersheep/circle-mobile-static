@import "mixins"

body
    color: #333
    background: #fff

.content
    position: static
    padding-bottom: 34px


.product
    position: relative
    clearfix()
    .slide
        border-bottom: 2px solid cyan
        .swiper-container,.swiper-slide
            width: 100%
            height: 220px
            img
                width: 100%
    .pagination
        display: none
    .arrows
        z-index: 9
        position: absolute
        top: 0
        width: 100%
        .prev,.next
            width: 14px
            height: 25px
            position: absolute
            top: 94px
        .prev
            // background: url("/img/arrow-left.png")
            left: 10px
        .next
            // background: url("/img/arrow-right.png")
            right: 10px
                

.table
    font-size: 12px
    padding: 40px 20px
    td
        padding-bottom: 10px
        vertical-align: top
    .name 
        width: 60px

.buy
    clearfix()
    display: block
    margin-bottom: 13px 
    .btn
        float: right
        margin-right: 5px
        width: 134px

.detail
    padding-bottom: 14px
    border-bottom: 1px solid cyan
    border-top: 1px solid cyan
    margin: 0 5px 24px 5px
    img
        display: block
        width: 100%


.manufacturing
    padding: 0 5px
    .title
        border-left: 2px solid cyan
        margin: 10px 0
        padding: 0 5px
        .cn
            font-size: 14px
        .en
            font-size: 12px

    .pic
        width: 100%
        display: block
        margin-bottom: 5px
    .content
        font-size: 12px
        font-family: STSong, serif
        line-height: 1.5